{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "preview": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "desc": {
      "type": "text"
    },
    "price": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "quantity": {
      "type": "integer"
    },
    "sales": {
      "type": "integer"
    }
  }
}
